# Set default charset
AddDefaultCharset UTF-8

<IfModule mod_rewrite.c>
    RewriteEngine On
    # If your site is running in a subdirectory (e.g., localhost/myproject/),
    # you might need to set RewriteBase. If public/ is the document root,
    # RewriteBase / should be correct.
    RewriteBase /

    # Route all non-file/directory requests to this directory's index.php
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Disable directory browsing
Options -Indexes

# PHP Settings
# Note: These settings can often be configured via your hosting control panel,
# which may override .htaccess directives.
<IfModule mod_php.c> # Changed from mod_php7.c for broader compatibility
    php_value upload_max_filesize 64M
    php_value post_max_size 64M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# MIME Types for audio and image files
<IfModule mod_mime.c>
    AddType audio/mpeg .mp3
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), midi=(), sync-xhr=(), magnetometer=(), gyroscope=(), payment=()"
    # Content-Security-Policy:
    # default-src 'self': Allows content from the application's own origin.
    # script-src 'self': Allows scripts from 'self'. No 'unsafe-inline' or 'unsafe-eval'.
    # style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com: Allows stylesheets from 'self' (e.g. /assets/css/style.css),
    #   jsdelivr.net (for Tailwind static CSS), and cdnjs.cloudflare.com (for FontAwesome CSS). No 'unsafe-inline'.
    # font-src 'self' https://cdnjs.cloudflare.com: Allows fonts from 'self' and cdnjs (for FontAwesome).
    # img-src 'self' data: blob: /uploads/: Allows images from 'self', data URIs, blob URIs, and from the /uploads/ directory.
    # media-src 'self' blob: /uploads/: Allows audio/video from 'self', blob URIs, and from the /uploads/ directory.
    # object-src 'none': Disallows plugins like Flash.
    # frame-ancestors 'self': Prevents clickjacking by disallowing embedding in iframes from other origins.
    # connect-src 'self': Allows XHR/fetch requests to the application's own origin (for API calls).
    Header set Content-Security-Policy "default-src 'self'; script-src 'self'; style-src 'self' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; font-src 'self' https://cdnjs.cloudflare.com; img-src 'self' data: blob: /uploads/; media-src 'self' blob: /uploads/; object-src 'none'; frame-ancestors 'self'; connect-src 'self';"
</IfModule>

# Caching: Cache static assets for better performance
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType audio/mpeg "access plus 1 week"
    ExpiresByType image/jpg "access plus 1 week"
    ExpiresByType image/jpeg "access plus 1 week"
    ExpiresByType image/png "access plus 1 week"
    ExpiresByType image/gif "access plus 1 week"
    ExpiresByType text/css "access plus 1 day"
    ExpiresByType application/javascript "access plus 1 day"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css application/x-javascript application/javascript application/json
</IfModule>

# Security: Disallow remote access to sensitive files
# This rule is important. If .htaccess is in public/, and sensitive files like
# db_config.php are outside public/ (e.g., in project root), this rule in public/.htaccess
# won't protect them. Protection for files outside the webroot must be handled by server config
# or by ensuring they are not web accessible.
# This rule here would protect such files if they were *inside* the public directory.
<FilesMatch "\.(env|ini|log|sql|bak|sh|config\.php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Security: Limit file uploads (100MB max request size)
LimitRequestBody 104857600
